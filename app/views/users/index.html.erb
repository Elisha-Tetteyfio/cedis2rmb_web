<div class="w-full p-4">

  <div class=" bg-white rounded-lg">
    <div class="flex  items-center justify-center">
      <h1 class="font-bold text-4xl">Users</h1>
    </div>
    <hr class="border-slate_dark "/>

    <div class="p-4 w-[50%]">
      <table class="w-full text-sm ">
        <thead>
          <tr class="text-left bg-slate_medium border-y-2 border-slate_dark">
            <th>Username</th>
            <th>Email</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td>
                <%= link_to "Details", user, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
